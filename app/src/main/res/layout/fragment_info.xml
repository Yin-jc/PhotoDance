<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_4">

    <!--<ImageView-->
        <!--android:id="@+id/background_info"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="250dp"-->
        <!--android:src="@drawable/shape_gradient_4"-->
        <!--android:focusable="true"-->
        <!--android:clickable="true"/>-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userHeadImage_info"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/personal_center"/>

    <Button
        android:id="@+id/save_info"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="70dp"
        android:text="保存修改"
        android:background="@drawable/blue_button_enabled_shape"/>

    <LinearLayout
        android:id="@+id/username_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/userHeadImage_info"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/person_outline"/>

        <TextView
            android:id="@+id/username_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/username_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/information_outline"/>

        <EditText
            android:id="@+id/base_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入年龄"/>

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp">
            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="女"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/base_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email_outline"/>

        <EditText
            android:id="@+id/email_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入邮箱"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/email_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home_outline"/>

        <EditText
            android:id="@+id/home_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入所在地"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/people_outline"/>

        <EditText
            android:id="@+id/company_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入所在公司"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profession_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/company_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/briefcase_outline"/>

        <EditText
            android:id="@+id/profession_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入所从事的工作"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signature_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profession_info_layout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pricetag_outline"/>

        <EditText
            android:id="@+id/signature_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入个性签名"/>
    </LinearLayout>

</RelativeLayout>