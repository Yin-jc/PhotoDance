<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userHeadImage_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/personal_center"/>

    <TextView
        android:id="@+id/please_set_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userHeadImage_register"
        android:padding="30dp"
        android:text="@string/text_select_user_head_image"
        android:textColor="@color/color_black"/>

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_enabled_shape"
        android:text="@string/text_next"
        android:textColor="@color/color_black"
        android:layout_below="@+id/userHeadImage_register"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>



</RelativeLayout>