<?xml version="1.0" encoding="utf-8"?>

<!--ImageView的父布局的宽高也需要设置为wrap_content，否则会出现大量留白-->

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="@dimen/radius"
    app:cardElevation="@dimen/radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/color_black"
            android:text="Yjc"
            android:textSize="@dimen/text_size_large"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/personal_center"
                android:layout_marginStart="10dp"

                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yjc"
                android:textColor="@color/color_black"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                app:btn_color="@color/light_gray"
                app:btn_fill_color="@color/color_red"
                app:allow_random_color="false"
                app:siShape="@raw/like"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/collection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                app:btn_color="@color/light_gray"
                app:btn_fill_color="@color/md_yellow_600"
                app:allow_random_color="false"
                app:siShape="@raw/collection"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


