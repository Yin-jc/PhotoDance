<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
    </style>

    <!--PopupWindow弹出和收回动画-->
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_float_window_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_float_window_exit</item>
    </style>

    <style name="UploadAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_upload_image_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_upload_image_exit</item>
    </style>

</resources>
